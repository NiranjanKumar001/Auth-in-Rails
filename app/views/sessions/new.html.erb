<div class="auth-container">
  <h1>Login</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email", required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter your password", required: true, class: "form-control" %>
    </div>

    <%= f.submit "Login", class: "btn btn-primary" %>
  <% end %>

  <p class="auth-link">
    Don't have an account? <%= link_to "Sign up here", signup_path %>
  </p>
</div>
